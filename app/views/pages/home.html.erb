<div class="home-wrapper">
  <%= link_to to_do_lists_path, class: "home-image" do %>
    <%= image_tag "logo.png", alt: "bat" %>
    <p class="home-text">Alfred takes notes</p>
  <% end %>
  <div class="home-bar">
    <ul class="top-menu">
      <li>
        <%= link_to to_do_lists_path, class: "menu-item #{'active' if params[:controller] == 'to_do_lists'}" do %>
          <%= image_tag "list_gray.png", alt: "list" %>
        <% end %>
      </li>
      <li>
        <%= link_to long_notes_path, class: "menu-item #{"active" if params[:controller] == "long_notes" }" do %>
          <%= image_tag "notebook_gray.png", alt: "notebook" %>
        <% end %>
      </li>
      <li>
        <%= link_to posts_path, class: "menu-item #{"active" if params[:controller] == "posts" }" do %>
          <%= image_tag "writing-gray.png", alt: "journal" %>
        <% end %>
      </li>
      <li>
        <%= link_to bookmarks_path, class: "menu-item #{"active" if params[:controller] == "bookmarks" }" do %>
          <%= image_tag "bookmark-gray.png", alt: "bookmark" %>
        <% end %>
      </li>
      <li>
        <%= link_to short_notes_path, class: "menu-item #{"active" if params[:controller] == "short_notes" }" do %>
          <%= image_tag "post-it_gray.png", alt: "post-it" %>
        <% end %>
      </li>
      <li>
        <%= link_to objectives_path, class: "menu-item #{"active" if params[:controller] == "objectives" }" do %>
          <%= image_tag "mission_gray.png", alt: "objectif" %>
        <% end %>
      </li>
    </ul>
  </div>
  <div class="tools">
    <%= render 'shared/tools' %>
  </div>
</div>
