<div class="flex-wrap mb-5">
  <div class="title">
    <h4>Long Notes</h4>
    <div class="action">
      <% if policy(LongNote).create? %>
        <%= link_to new_long_note_path do %>
          <i class="far fa-plus-square"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="">
    <%= form_tag long_notes_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "search-bar",
        placeholder: "Entrer un mot clÃ©"
      %>
      <%= submit_tag "Chercher", class: "btn button" %>
    <% end %>
  </div>
</div>

<div class="one-quarter-wrapper">
  <p><%= @message %></p>
  <% if @long_notes.any? %>
    <div class="one-third">
      <% @long_notes.each do |long_note|%>
        <div class="long_note">
          <%= link_to long_notes_path(id: long_note.id) do %>
            <p>
              <strong>
                <%= I18n.t('date.month_names')[long_note.updated_at.month] %>
                <%= long_note.updated_at.year %> :
              </strong>
            <br>
              <em><%= long_note.title %></em>
            </p>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="two-third">
      <%= render 'show' %>
    </div>
  <% end %>
</div>

