<div class="title">
  <h4>To do lists</h4>
  <div class="action-create">
    <% if policy(ToDoList).create? %>
      <%= link_to new_to_do_list_path do %>
        <h4><i class="far fa-plus-square"></i></h4>
      <% end %>
    <% end %>
  </div>
</div>

<div class="grid-3fr-wrapper">
  <% @to_do_lists.each do |list|%>
    <div class="card">
      <%= link_to to_do_list_path(list) do %>
        <h4><%= list.title %></h4>
      <% end %>
      <% list.tasks.order(:status).each do |task| %>
        <div class="task-wrap">
          <div class="check">
            <% if task.status %>
              <span class=""><i class="far fa-check-square"></i></span>
            <% else %>
              <span class=""><i class="far fa-square"></i></span>
            <% end %>
          </div>
          <div class="task-description">
            <%= task.description %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

