<div class="title">
  <h4>Board of Missions</h4>
  <div class="action">
    <% if policy(Mission).create? %>
      <%= link_to new_mission_path do %>
        <i class="far fa-plus-square"></i>
      <% end %>
    <% end %>
  </div>
</div>

<div class="mobile-version">
  This feature is not available on mobile. Please check the board on your laptop.
</div>

<div class="missions-grid">
  <div class="my-card grid-rows">
    <p class="headers">END DATE</p>
    <% @missions.each do |mission|%>
      <p>
        <%= mission.updated_at.day %>
        of
        <%= I18n.t('date.month_names')[mission.updated_at.month] %>
        <%= mission.updated_at.year %>
      </p>
    <% end %>
  </div>
  <div class="card grid-rows">
    <p class="headers">CLIENT</p>
    <% @missions.each do |mission|%>
      <p><%= mission.client_name %></p>
    <% end %>
  </div>
  <div class="card grid-rows">
    <p class="headers">TITLE</p>
    <% @missions.each do |mission|%>
      <p><%= mission.title %></p>
    <% end %>
  </div>
  <div class="card grid-rows">
    <p class="headers">DESCRIPTION</p>
    <% @missions.each do |mission|%>
      <p><%= mission.description %></p>
    <% end %>
  </div>
  <div class="card grid-rows">
    <p class="headers">TIME SPENT</p>
    <% @missions.each do |mission|%>
      <p><em><i class="fas fa-long-arrow-alt-right"></i><%= mission.time_spent %></em></p>
    <% end %>
  </div>
  <div class="card grid-rows">
    <p class="headers">TOTAL â‚¬</p>
    <% @missions.each do |mission|%>
      <p><strong><%= mission.money_earned %></strong></p>
    <% end %>
  </div>
  <div class="card grid-rows">
    <p class="headers">NOTES</p>
    <% @missions.each do |mission|%>
      <p><%= mission.note %></p>
    <% end %>
  </div>
  <div class="grid-rows">
    <p></p>
    <% @missions.each do |mission|%>
      <div class="action-box">
        <div class="action">
          <% if policy(mission).edit? %>
            <%= link_to edit_mission_path(mission) do %>
              <i class="far fa-edit"></i>
            <% end %>
          <% end %>
        </div>
        <div class="action">
          <% if policy(mission).destroy? %>
            <%= link_to mission, method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
