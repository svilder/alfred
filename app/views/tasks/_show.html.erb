<div class="task-wrap" data-task-id="<%= task.id %>">
  <div class="check">
    <% if task.status %>
      <%= link_to task_done_path(task), method: :patch do %>
        <span class=""><i class="far fa-check-square"></i></span>
      <% end %>
    <% else %>
      <%= link_to task_done_path(task), method: :patch do %>
        <span class=""><i class="far fa-square"></i></span>
      <% end %>
    <% end %>
  </div>
  <div class="task-description">
    <% if policy(Task).edit? %>
      <%= link_to  edit_task_path(task) do %>
        <%= task.description %>
      <% end %>
    <% end %>
  </div>
  <div class="action">
    <% if policy(Task).destroy? %>
      <%= link_to task_path(task), method: :delete, remote: true, data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    <% end %>
  </div>
</div>
